<?xml version='1.0'?>

<robot name="my_robot">
  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <geometry>
        <box size="1.0 0.5 0.25"/>
      </geometry>
      <material name="Blue">
         <color rgba="0 0.5 1 1"/>
      </material>
    </visual>
    <!-- Base collision, mass and inertia -->
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <geometry>
          <box size="1.0 0.5 0.25"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="0.3" ixy="0.0" ixz="0.0" iyy="0.7" iyz="0.0" izz="0.8"/>
    </inertial>
  </link>

  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <pose>0 0 0.1 0 0 0</pose>
  </gazebo>

  <!-- lower Right Wheel -->
  <link name="lower_right_wheel">
    <visual>
      <origin xyz="0 -0.01 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.2" />
      </geometry>
      <material name="black"/>
    </visual>
    <!-- lower Right Wheel collision, mass and inertia -->
    <collision>
      <origin xyz="0 -0.01 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.2" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.4"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>
  <gazebo reference="lower_right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <!--lower Right Wheel joint -->
  <joint name="joint_lower_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="lower_right_wheel"/>
    <origin xyz="-0.3 -0.3 0" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>


 <!-- lower Left Wheel -->
  <link name="lower_left_wheel">
    <visual>
      <origin xyz="0 0.01 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.2" />
      </geometry>
      <material name="black"/>
    </visual>
    <!-- lower Left Wheel collision, mass and inertia -->
    <collision>
      <origin xyz="0 0.01 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.2" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.4"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>
  <gazebo reference="lower_left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <!-- lower Left Wheel joint -->
  <joint name="joint_lower_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="lower_left_wheel"/>
    <origin xyz="-0.3 0.30 0" rpy="0 0 0" /> 
    <axis xyz="0 1 0"/>
  </joint>

 <!-- upper Right Wheel -->
  <link name="upper_right_wheel">
    <visual>
      <origin xyz="0 -0.01 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.2" />
      </geometry>
      <material name="black"/>
    </visual>
    <!-- upper Right Wheel collision, mass and inertia -->
    <collision>
      <origin xyz="0 -0.01 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.2" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.4"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>
  <gazebo reference="upper_right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <!--upper Right Wheel joint -->
  <joint name="joint_upper_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="upper_right_wheel"/>
    <origin xyz="0.3 -0.30 0" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>


 <!-- upper Left Wheel -->
  <link name="upper_left_wheel">
    <visual>
      <origin xyz="0 0.01 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.2" />
      </geometry>
      <material name="black"/>
    </visual>
    <!-- upper Left Wheel collision, mass and inertia -->
    <collision>
      <origin xyz="0 0.01 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.2" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.4"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>
  <gazebo reference="upper_left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <!-- upper Left Wheel joint -->
  <joint name="joint_upper_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="upper_left_wheel"/>
    <origin xyz="0.3 0.30 0" rpy="0 0 0" /> 
    <axis xyz="0 1 0"/>
  </joint>
<gazebo>
  <plugin name="skid_steer_drive_controller" filename="libgazebo_ros_skid_steer_drive.so">
    <updateRate>100.0</updateRate>
    <robotNamespace>/</robotNamespace>
    <leftFrontJoint>joint_upper_left_wheel</leftFrontJoint>
    <rightFrontJoint>joint_upper_right_wheel</rightFrontJoint>
    <leftRearJoint>joint_lower_left_wheel</leftRearJoint>
    <rightRearJoint>joint_lower_right_wheel</rightRearJoint>
    <wheelSeparation>0.6</wheelSeparation>
    <wheelDiameter>0.2</wheelDiameter>
    <robotBaseFrame>base_link</robotBaseFrame>
    <MaxForce>5.0</MaxForce>
    <torque>200</torque>
    <commandTopic>cmd_vel</commandTopic>
    <odometryTopic>odom</odometryTopic>
    <odometryFrame>odom</odometryFrame>
    <covariance_x>0.0001</covariance_x>
    <covariance_y>0.0001</covariance_y>
    <covariance_yaw>0.01</covariance_yaw>
    <broadcastTF>false</broadcastTF>
  </plugin>
</gazebo>




<!-- hokuyo -->

  <gazebo reference="sensor_laser">
    <sensor type="ray" name="head_hokuyo_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>40</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.570796</min_angle>
            <max_angle>1.570796</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.10</min>
          <max>15</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
        <topicName>/scan</topicName>
        <frameName>sensor_laser</frameName>
      </plugin>
    </sensor>
  </gazebo>



  <!-- Camera -->
  <gazebo reference="camera_link">
    <sensor type="camera" name="camera">
      <update_rate>30.0</update_rate>
      <visualize></visualize>
      <camera name="head">
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>myrobot/camera</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>camera</frameName>
        <hackBaseline>0.07</hackBaseline>
        <distortionK1>0.0</distortionK1>
        <distortionK2>0.0</distortionK2>
        <distortionK3>0.0</distortionK3>
        <distortionT1>0.0</distortionT1>
        <distortionT2>0.0</distortionT2>
      </plugin>
    </sensor>
  </gazebo>
  <!-- hokuyo model -->

  <joint name="hokuyo_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="sensor_laser"/>
  </joint>

  <link name="sensor_laser">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://assignment/meshes/sensors/hokuyo.dae"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <!-- Camera model -->
  <joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.485 0 0.2" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="camera_link"/>
  </joint>
  <link name="camera_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>

      <material name="red"/>
    </visual>

    <inertial>
      <mass value="0.05" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>


</robot>
