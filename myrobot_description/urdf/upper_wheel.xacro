<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://ros.org/wiki/xacro">
 <!-- upper Right Wheel -->
  <link name="upper_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.1" />
      </geometry>
      <material name="black"/>
    </visual>
    <!-- upper Right Wheel collision, mass and inertia -->
    <collision>
      <origin xyz="0 -0.01 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.1" />
      </geometry>
      <mu1>0.1</mu1>
      <mu2>0.1</mu2>
      <kp>500000.0</kp>
      <kd>10.0</kd>
      <minDepth>0.001</minDepth>
      <maxVel>0.1</maxVel>
      <fdir1>1 0 0</fdir1>
    </collision>
    <inertial>
      <mass value="3"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>
  <gazebo reference="upper_right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <!--upper Right Wheel joint -->
  <joint name="joint_upper_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="upper_right_wheel"/>
    <origin xyz="0.3 -0.31 -0.5" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>


 <!-- upper Left Wheel -->
  <link name="upper_left_wheel">
